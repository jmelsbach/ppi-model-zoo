    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: STEP Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/step/model_cli.py",
            "args": [
                "fit",
                "--trainer.max_epochs=2",
                "--trainer.strategy=ddp_find_unused_parameters_true",
                "--data.data_dir=.data/benchmarkingGS_v1-0_similarityMeasure_sequence_v3-1.csv",
                "--data.batch_size=2",
                "--data.tokenizer=Rostlab/prot_bert_bfd",
                "--data.max_len=1024",
                "--model.nr_frozen_epochs=0"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal"
        },
        {
            "name": "Python: RAPPPID Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/rapppid/model_cli.py",
            "args": [
                "fit",
                "--trainer.precision=16-mixed",
                "--trainer.logger=WandbLogger",
                "--trainer.logger.project=protein-rapppid",
                "--trainer.logger.offline=false",
                "--trainer.strategy=ddp_find_unused_parameters_true",
                "--trainer.callbacks+=StochasticWeightAveraging",
                "--trainer.callbacks.swa_lrs=0.05",
                "--trainer.callbacks.swa_epoch_start=3",
                "--data.data_dir=.data",
                "--data.file_name=benchmarkingGS_v1-0_similarityMeasure_sequence_v3-1.csv",
                "--data.batch_size=80",
                "--data.tokenizer_file=scripts/rapppid/spm.model",
                "--data.with_validation=True",
                "--data.truncate_len=1500",
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal"
        }
    ]
}